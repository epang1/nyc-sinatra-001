<h1>Edit Figure</h1>

<form action="/figures/<%= @figure.id %>" method="POST">
Name: <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>"><br>

<label> Title: </label>
<% Title.all.each do |title| %>
<%= title.name %>:
<input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>" 
  <% if @figure.titles.include?(title) %>
    <%= "checked" %>
  <% end %>><br>
<% end %>
Or Create New Title: <input type="text" name="title[name]" id="new_title"><br><br>

<label>Landmark: </label>
<% Landmark.all.each do |landmark| %>
<%= landmark.name %>: <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"><br>
<% end %><br>
Or Create New Landmark: <input type="text" name="landmark[name]" id="new_landmark"><br><br>

<input type="submit" value="Edit Figure">
  
</form>